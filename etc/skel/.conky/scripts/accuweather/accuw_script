         23)
           echo o
         ;;
         24)
           echo r
         ;;
         25)
           echo u
         ;;
         26)
           echo v
         ;;
         29)
           echo x
         ;;
         30)
           echo 5
         ;;
         31)
           echo E
         ;;
         32)
           echo 6
         ;;
         33)
           echo A
         ;;
         34)
           echo B
         ;;
