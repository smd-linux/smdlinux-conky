#!/bin/bash

#function: test_image_day
test_image_day () {
    case $1 in
         1)
           echo a
         ;;
         2)
           echo b 
         ;;
         3)
           echo c
         ;;
        4)
           echo c
         ;;
         5)
           echo d
         ;;
         6)
           echo d
         ;;
         7)
           echo e
         ;;
         8)
           echo f
         ;;
         11)
           echo 0
         ;;
         12)
           echo h
         ;;
         13)
           echo g
         ;;
         14)
           echo g
         ;;
         15)
           echo l
         ;;
         16)
           echo k
         ;;
         17)
           echo k
         ;;
         18)
           echo i
         ;;
         19)
           echo p
         ;;
         20)
           echo o
         ;;
         21)
           echo o
