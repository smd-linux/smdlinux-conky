         38)
           echo D
         ;;
         39)
           echo G
         ;;
         40)
           echo G
         ;;
         41)
           echo G
         ;;
         42)
           echo G
         ;;
         43)
           echo O
         ;;
         44)
           echo O
         ;;
        esac
} 

#function: test_image_night
test_image_night () {
    case $1 in
         1)
           echo a
         ;;
         2)
           echo b 
         ;;
         3)
           echo c
         ;;
        4)
           echo c
         ;;
         5)
           echo d
         ;;
         6)
           echo d
         ;;
         7)
           echo e
         ;;
         8)
           echo f
         ;;
         11)
           echo 0
         ;;
         12)
           echo h
         ;;
         13)
           echo g
         ;;
         14)
           echo g
         ;;
         15)
           echo l
         ;;
         16)
           echo k
         ;;
         17)
           echo k
         ;;
         18)
           echo i
         ;;
         19)
           echo p
         ;;
         20)
           echo o
         ;;
         21)
           echo o
         ;;
         22)
           echo q
         ;;
         23)
           echo o
